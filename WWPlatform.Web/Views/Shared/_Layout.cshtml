<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <!--baidu union-->
    <meta name="baidu_union_verify" content="dd0862ee8e5a7909b7b905dd44f45af5">
    <!--google sitemap-->
    <meta name="google-site-verification" content="bubwKbJ6GFCyWCKN2gZZsJ7v_rv2igBPHtuy2M4QcHY" />
    <title>@ViewBag.Title</title>
    @using WWPlatform.Web.Mvc.Extensions
    <link rel="shortcut icon" href="@Url.Image("favicon.ico")"/>
    <link href="@Url.StyleSheet("global.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Javascript("jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Javascript("jquery.lazyload.min.js")" type="text/javascript"></script>
    <script src="@Url.Javascript("txv.base.js")" type="text/javascript"></script>
    @RenderSection("res", required: false)
    <script type="text/javascript">
        $(function () {
            $("img").lazyload({
                effect: "fadeIn"
            });
        }); 
    </script>
    <!--google analytics-->
    <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-24022914-2']);
        _gaq.push(['_setDomainName', 'culture-visions.com']);
        _gaq.push(['_setAllowHash', 'false']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    </script>
</head>
<body>
    @RenderSection("head", required: true)
    @RenderBody()
    <div class="foot">
        <p class="copyrighten">
            Copyright &copy; @DateTime.Now.Year <a href="@Url.Action("Index", "Home")">文化中国</a>
        </p>
    </div>
    <script type="text/javascript">
        $(document).ready(
            function () {
                txv.common.initPage();
            }
        );
    </script>
</body>
</html>
